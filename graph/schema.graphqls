# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  ping: Boolean!
}

type Mutation {
  addAmenity(input: NewAmenity!): ID!
}

scalar Upload

input NewAmenity {
  name: String!
  type: String!
  latitude: Float!
  longitude: Float!
  photo: Upload
  description: String
}

type Amenity {
  id: ID!
  name: String!
  type: String!
  latitude: Float!
  longitude: Float!
  description: String
}